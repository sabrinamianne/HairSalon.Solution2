@{
  Layout = "_Layout";
}
@using HairSalon.Models

<div id="main">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-md-6 " id="firstcol">
        @if (@Model.Count == 0)
          {
            <h3>No specialty have been added yet!</h3><br>
          }
        @if (@Model.Count != 0)
          {
          <h1>Specialties of SK Hair Salon Bio </h1><br><br><br>
          }
        <ul>
        @foreach (var specialty in Model)
          {
          <li><a href="/specialties/@specialty.GetId()">@specialty.GetName()</a></li>
          }

        </ul>
        <br><br><h1><a href="/specialties/new">Add a Specialty</a></h1><br>
      </div>
      <div class="col-md-6" id="secondcol">
        <h1>Hair Salon Bio</h1>
        <form action="/specialties/delete" method="post">
          <br><br><button class="second2" type="submit" name="button">Delete ALL Specialities</button><br><br><br>
        </form>
        <h1><a href="/stylists">Back to the list of our Stylists</a></h1>
        <h1><a href="/">Back home</a></h1>
      </div>
    </div>
  </div>
  <div class="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-12r">
        </div>
      </div>
    </div>
  </div>
</div>
