@{
  Layout = "_Layout";
}
@using HairSalon.Models
<div id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-6" id="firstcol">
        <h1>Specialty : @Model.GetName()</h1><br><br>

        <form action="/specialties/@Model.GetId()/stylists/add" method="post">
        <h2><label for="stylistId" style="color: #b3c9b1;">Add @Model.GetName() to a Stylist : </label></h2><br>
        <select name="stylistId" id="selection" required>
            <option disabled selected value>Select...</option>
            @foreach(@Stylist stylist in @Stylist.GetAll())
            {
              <option value="@stylist.GetId()">@stylist.GetName()</option>
            }
        </select>
        <button class="second" type="submit">Add</button>
    </form>
      </div>
      <div class="col-md-6" id="secondcol">
        <h1></h1>
        @if(@Model.GetStylists().Count == 0)
         {
             <h2>No stylists specialize in @Model.GetName()</h2>
         }

         @if(@Model.GetStylists().Count > 0)
         {
           <h3>Stylists specialized in the specialty : @Model.GetName()  </h3>
             <ul>
                 @foreach(Stylist stylist in @Model.GetStylists())
                 {
                  <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></li>
                 }
             </ul>
         }
        <br><br><h1><a href="/specialties">Back to the list of our Specialties</a></h1>
        <h1><a href="/">Back home</a></h1><br>
      </div>
    </div>
  </div>
  <div class="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-12r">
        </div>
      </div>
    </div>
  </div>
</div>
