@{
  Layout = "_Layout";
}
<div id="main">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-12 col-md-6 col-lg-8" id="firstcol">
        @if (@Model.Count == 0)
          {
            <h3>No stylist have been hired yet!</h3>
          }
        @if (@Model.Count != 0)
          {
          <h1>Stylists of SK Hair Salon Bio </h1><br>
          @foreach (var stylist in Model)
          {
            <a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a>
            <h3>Number of Clients:  @stylist.GetCountClients()</h3>
            <h3>Number of Specialties: @stylist.GetSpecialties().Count</h3>
            <a href='/stylists/@stylist.GetId()/edit'>Update the name of @stylist.GetName()</a><br><br>
            <form action="/stylists/@stylist.GetId()/delete" method="post">
              <button class="second2" type="submit" name="button">Delete @stylist.GetName()</button><br><br><br>
            </form>
          }
        }
        <form action="/stylists/delete" method="post">
          <br><br><button class="second2" type="submit" name="button">Delete ALL Stylists</button><br><br><br>
        </form>
      </div>
      <div class="col-6 col-lg-4" id="secondcol">
        <h1>Hair Salon Bio</h1><br><br>
        <a href='/stylists/new'>Add a new Stylist</a>
        <form action="/stylists/delete" method="post">
          <br><button class="second2" type="submit" name="button">Delete ALL Stylists</button><br><br><br>
        </form>
        <a href='/specialties'>List of all Specialties</a>
        <br><br><a href="/">Back home</a>
      </div>
    </div>
  </div>
  <div class="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-12r">
        </div>
      </div>
    </div>
  </div>
</div>
